<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tzj.baselib.demo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.tzj.baselib.App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tzj.baselib.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="主页面">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.tzj.baselib.RefreshListActivity"
            android:label="列表刷新demo"/>

        <activity android:name="com.tzj.baselib.MvvmActivity"
            android:label="MVVMdemo"/>
        <activity android:name="com.tzj.baselib.Mvvm2Activity"
            android:label="MVVMdemo"/>
        <activity android:name="com.tzj.baselib.ImageViewActivity"
            android:theme="@style/AppTheme.NoTitle"/>
    </application>

</manifest>