<resources>
    <!--主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimaryDark">@color/theme_dark</item> <!--导航栏颜色-->
        <item name="colorPrimary">@color/theme</item> <!--通知栏颜色-->
        <item name="colorAccent">@color/theme</item> <!--控件选中后颜色-->

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:colorBackground">@color/theme_bg</item>
        <item name="android:textColorPrimary">@color/theme</item>
        <!--<item name="android:textColor">@color/text_black</item>-->
        <!--<item name="android:editTextColor">@color/text_black</item>-->
        <!--<item name="android:textColorHint">@color/text_gray</item>-->
        <!--<item name="android:textSize">@dimen/text_normal</item>-->
        <item name="android:colorForeground">@color/theme</item>

    </style>
    <!--无标题的主题-->
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--无标题无背景的主题-->
    <style name="AppTheme.NoBg" parent="AppTheme.NoTitle">
        <!-- 隐藏状态栏 -->
        <!--<item name="android:windowFullscreen">true</item>-->
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <!--无背景-->
        <item name="android:windowIsTranslucent">true</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/black_transparent</item>
    </style>


    <!--dialog的主题-->
    <style name="dialog_base" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--从底部弹出的动画-->
    <style name="animation_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_bottom</item>
    </style>

    <!--用于横条 padding-->
    <style name="line_padding">
        <item name="android:paddingTop">@dimen/padding_line</item>
        <item name="android:paddingBottom">@dimen/padding_line</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>
    <!--用于横条 padding 白色背景-->
    <style name="line_padding.white" parent="line_padding">
        <item name="android:background">@color/white</item>
    </style>

    <!--上下的 padding-->
    <style name="line_tb">
        <item name="android:paddingTop">@dimen/padding_line</item>
        <item name="android:paddingBottom">@dimen/padding_line</item>
    </style>
    <!--上下的 padding 白色背景-->
    <style name="line_tb.white" parent="line_tb">
        <item name="android:paddingTop">@dimen/padding_line</item>
        <item name="android:paddingBottom">@dimen/padding_line</item>
    </style>

</resources>
